datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      String   // 'student' | 'educator'
  lessons   Lesson[]
  progress  ModuleProgress[]
}

model Lesson {
  id          String    @id @default(cuid())
  title       String
  description String?
  topic       String?
  coverUrl    String?
  ownerId     String?
  owner       User?      @relation(fields: [ownerId], references: [id])
  modules     Module[]
  quizzes     Quiz[]
}

model Module {
  id       String  @id @default(cuid())
  title    String
  lessonId String
  lesson   Lesson  @relation(fields: [lessonId], references: [id])
  progress ModuleProgress[]
}

model Quiz {
  id       String   @id @default(cuid())
  title    String
  topic    String?
  lessonId String?
  lesson   Lesson?  @relation(fields: [lessonId], references: [id])
  // questions could be a JSON field if needed
}

model ModuleProgress {
  userId    String
  moduleId  String
  lessonId  String
  completedAt DateTime?
  user      User   @relation(fields: [userId], references: [id])
  module    Module @relation(fields: [moduleId], references: [id])
  @@id([userId, moduleId])
  @@index([lessonId])
}
