generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String           @id @default(cuid())
  email    String           @unique
  password String
  role     String
  progress ModuleProgress[]
}

model Lesson {
  id          String   @id @default(cuid())
  title       String
  description String?
  topic       String?
  coverUrl    String?
  modules     Module[]
  quizzes     Quiz[]
}

model Module {
  id       String           @id @default(cuid())
  title    String
  lessonId String
  lesson   Lesson           @relation(fields: [lessonId], references: [id])
  progress ModuleProgress[]
}

model Quiz {
  id       String  @id @default(cuid())
  title    String
  topic    String?
  lessonId String?
  lesson   Lesson? @relation(fields: [lessonId], references: [id])
}

model ModuleProgress {
  userId      String
  moduleId    String
  lessonId    String
  completedAt DateTime?
  user        User      @relation(fields: [userId], references: [id])
  module      Module    @relation(fields: [moduleId], references: [id])

  @@id([userId, moduleId])
  @@index([lessonId])
}
